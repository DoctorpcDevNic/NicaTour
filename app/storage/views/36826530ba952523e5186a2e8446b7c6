<?php $__env->startSection('contenido'); ?>

	<div class="container-fluid">
		<?php if(Session::has('message')): ?>
			<div class="alert alert-info"><?php echo Session::get('message'); ?></div>
		<?php endif; ?>
		<h2 class="titul">Gasolineras</h2>
		<div class="row">
		<?php if(!count($Gasolineras)==0): ?>		
			<?php foreach($departamentos as $value): ?>
						<div class="col-md-6">						
							<div id="mapa<?php echo $value->id; ?>" style="height:300px;">
								
							</div>
							<h3 class="titul"><?php echo $value->nombre; ?></h3>
						</div>
			<?php endforeach; ?>
		<?php else: ?>
			<h2 class="titul">No se ninguna gasolineras, favor agregar datos</h2>
		<?php endif; ?>
		</div>
		<div><?php echo $departamentos->links(); ?></div>
	</div>
<?php $__env->stopSection(); ?>

<?php $__env->startSection('Scripts'); ?>

<script>
	var conteo=0;
	
	function initialize(){

		<?php foreach($departamentos as $key): ?>
			var map<?php echo $key->id; ?>;
			map<?php echo $key->id; ?> = new google.maps.Map(document.getElementById('mapa<?php echo $key->id; ?>'), mapOptions);

			var myLatlng<?php echo $key->id; ?> = new google.maps.LatLng(<?php echo $key->latitud; ?>,<?php echo $key->longitud; ?>);
			var mapOptions = {
		          zoom: <?php echo $key->zoom; ?>,
		          center: myLatlng<?php echo $key->id; ?>,
		          mapTypeId: google.maps.MapTypeId.ROADMAP,
		          scrollwheel: false
		        };


		<?php endforeach; ?>
		
	}
	
	function loadScript()
	{
	  var script = document.createElement("script");
	  script.type = "text/javascript";
	  script.src = "http://maps.googleapis.com/maps/api/js?key=&sensor=false&callback=initialize";
	  document.body.appendChild(script);
	}

	window.onload = loadScript;	
	window.onresize = initialize;
</script>

<?php $__env->stopSection(); ?>
<?php echo $__env->make('templates.adminTemplate', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>