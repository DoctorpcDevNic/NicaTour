		</div>
		<?php if(!count($Eventos)==0): ?>
			<div class="row">	
				<?php foreach($Eventos as $key): ?>
					<div class="col-md-6">									
						<h2 class="titul"><?php echo $key->nombre; ?></h2>
						<p><?php echo $key->municipio; ?></p>
						<?php $fecha=new DateTime($key->fecha);  ?>
						<p><?php echo $fecha->format('d/m/y'); ?></p>
						<p><?php echo $key->direccion; ?></p>
						<a href="<?php echo URL::to('/administrador/Calendario/Edit/'.$depto->nombre.'/'.$key->id.''); ?>">
							<h2 class="btn btn-primary">Editar</h2>
						</a>
						<a href="<?php echo URL::to('/administrador/Calendario/Del/'.$key->id.''); ?>">
							<h2 class="btn btn-danger">Eliminar</h2>
						</a>										
					</div>
				<br>
				<?php endforeach; ?>
			</div>
		<?php else: ?>
			<h2 class="titul">No se ha encontrado ninguna informacion</h2>
		<?php endif; ?>
		<div><?php echo $Eventos->links(); ?></div>
	</div>
<?php $__env->stopSection(); ?>
